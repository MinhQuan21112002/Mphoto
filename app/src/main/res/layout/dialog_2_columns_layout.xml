<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Cột bên trái -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="ISO"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/isoText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/isoText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/isoText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/isoText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/isoText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/isoText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/isoText7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginBottom="4dp" />

    </LinearLayout>

    <!-- Cột bên phải -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exposure Time"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/exposureText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/exposureText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/exposureText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/exposureText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/exposureText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/exposureText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/exposureText7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginBottom="4dp" />
    </LinearLayout>
</LinearLayout>
